<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="5dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:text="Title"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="1dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/orderImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Description of order"
            android:textSize="18sp"
            android:padding="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="@id/orderImage"
            app:layout_constraintStart_toEndOf="@id/orderImage"
            app:layout_constraintEnd_toEndOf="parent"
             />

        <TextView
            android:id="@+id/txt_orderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/txt_desc"
            app:layout_constraintTop_toBottomOf="@id/txt_desc"
            />

        <TextView
            android:id="@+id/txt_orderColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/txt_orderName"
            app:layout_constraintTop_toTopOf="@id/txt_orderName"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/txt_orderQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/txt_orderName"
            app:layout_constraintStart_toEndOf="@id/txt_orderName"
            app:layout_constraintEnd_toStartOf="@id/txt_orderColor"
            />



    </android.support.constraint.ConstraintLayout>




</android.support.v7.widget.CardView>